<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bluesbg"
        tools:context=".activities.Grades"
        android:id="@+id/drawerLayout">


        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/gradesHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Noteneingabe"
                android:textSize="27dp" />

            <Spinner
                android:id="@+id/spinnerLecture"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_below="@id/gradesHeading"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />

            <EditText
                android:id="@+id/insertGrade"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/spinnerLecture"
                android:ems="10"
                android:hint="x.x"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:focusedByDefault="false"/>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/insertGrade">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>

                <Button
                    android:id="@+id/buttonInsertGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eintragen" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>

                <Button
                    android:id="@+id/buttonInsertNoGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ohne Note Eintragen" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>

            </LinearLayout>

            <TextView
                android:id="@+id/gradesShowHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NotenÃ¼bersicht"
                android:textSize="27dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/buttonLayout"/>

            <include layout="@layout/table_layout"/>


        </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>