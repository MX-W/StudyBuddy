<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.Grades"
    android:id="@+id/drawerLayout">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <Spinner
            android:id="@+id/spinnerLecture"
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:id="@+id/insertGrade"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/spinnerLecture"
            android:ems="10"
            android:hint="x.x"
            android:textAlignment="center"
            android:inputType="numberDecimal|numberSigned" />


        <RelativeLayout
            android:id="@+id/switchLayout"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/insertGrade">

        <Switch
            android:id="@+id/switchOtherSemester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note aus vergangenen Semestern eintragen"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            />


        <Spinner
            android:id="@+id/spinnerSemester"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/switchOtherSemester"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/switchLayout">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <Button
                android:id="@+id/buttonInsertGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eintragen" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

            <Button
                android:id="@+id/buttonInsertNoGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ohne Note Eintragen" />
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" >
            </Space>

        </LinearLayout>


        <TextView
            android:id="@+id/insertGradeExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:text="Wähle zuerst das Fach und gebe anschließend deine Note ein. Falls man dieses Fach nur bestehen musste, dann klicke den Button 'Ohne Note eintragen'. Du kannst auch Noten auus vergangenen Semestern nachtragen."
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="@color/colorDarkerGrey"/>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>