<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.GradeCalculationActivity"
    android:id="@+id/drawerLayout">
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <EditText
            android:id="@+id/calculationGradeInput"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="x.x"
            android:textAlignment="center"
            android:inputType="numberDecimal|numberSigned" />

        <Button
            android:id="@+id/buttonCalculateGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/calculationGradeInput"
            android:text="Berechnen" />

    <TextView
        android:id="@+id/calculationGradeExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonCalculateGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:text="Trage die die Note ein, welche du am Ende des Studiums erreichen möchtest. Du bekommst dann den Durchschnitt ausgegeben, den du in deinen restlichen Prüfungen erreichen musst, damit du deine Wunschnote schaffst."
        android:textSize="13dp"
        android:textAlignment="center"
        android:textColor="@color/colorDarkerGrey"/>




</RelativeLayout>


        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/navigation_menu"
            android:layout_gravity="start"
            app:headerLayout="@layout/navigation_header">

        </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
